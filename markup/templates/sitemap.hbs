<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <url>
      <loc>{{SiteBase}}</loc>
      <changefreq>weekly</changefreq>
      <priority>1.0</priority>
   </url>
   <url>
      <loc>{{SiteBase}}/partners</loc>
      <changefreq>monthly</changefreq>
      <priority>0.4</priority>
   </url>
   <url>
      <loc>{{SiteBase}}/help</loc>
      <changefreq>weekly</changefreq>
      <priority>0.2</priority>
   </url>
    {{#each series}}
        {{#each this.topics}}
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}</loc>
            </url>
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}/watch</loc>
            </url>
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}/games</loc>
            </url>
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}/discover</loc>
            </url>
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}/create</loc>
            </url>
            <url>
                <loc>{{../../SiteBase}}/topic/{{this.id}}/craft</loc>
            </url>
        {{/each}}
    {{/each}}
</urlset> 